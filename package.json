{
  "name": "@guardian/image-rendering",
  "version": "3.0.4",
  "description": "Handles parsing images from CAPI and rendering them in the *-rendering projects",
  "main": "dist/index.js",
  "dependencies": {
    "@emotion/core": "^10.1.1",
    "@guardian/src-foundations": "^2.5.0",
    "@guardian/types": "github:guardian/types#semver:^0.5.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@emotion/babel-preset-css-prop": "^10.2.0",
    "@storybook/react": "^6.0.26",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "@types/react-test-renderer": "^16.9.3",
    "babel-loader": "^8.2.1",
    "jest": "^26.6.3",
    "jest-emotion": "^10.0.32",
    "react-test-renderer": "^16.14.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.7"
  },
  "scripts": {
    "preinstall": "[ -z \"$CI\" ] || if [[ $npm_execpath =~ 'yarn' ]]; then echo 'Use NPM!' && exit 1; fi",
    "build": "npm run build:tsc && npm run build:babel && npm run build:cleanup",
    "build:tsc": "tsc --outDir tmp",
    "build:babel": "babel tmp --config-file ./config/babel.config.json --out-dir dist --copy-files",
    "build:cleanup": "rm -rf tmp",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "start-storybook -p 8181 --ci",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/image-rendering.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/guardian/image-rendering/issues"
  },
  "homepage": "https://github.com/guardian/image-rendering#readme",
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "transformIgnorePatterns": [
      "node_modules/(?!(@guardian/src-foundations|@guardian/types)/)"
    ],
    "snapshotSerializers": [
      "jest-emotion"
    ],
    "testPathIgnorePatterns": [
      "dist"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "10"
                }
              }
            ],
            "@emotion/babel-preset-css-prop"
          ]
        }
      }
    }
  }
}