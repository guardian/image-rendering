{
  "name": "@guardian/image-rendering",
  "version": "5.0.0",
  "description": "Handles parsing images from CAPI and rendering them in the *-rendering projects",
  "main": "dist/index.js",
  "dependencies": {
    "@emotion/core": "^10.1.1",
    "@guardian/src-foundations": "^2.7.1",
    "@guardian/types": "github:guardian/types#semver:^1.0.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.7",
    "@emotion/babel-preset-css-prop": "^10.2.0",
    "@guardian/eslint-config-typescript": "^0.4.1",
    "@guardian/prettier": "^0.4.1",
    "@storybook/react": "^6.1.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-test-renderer": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.4.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "jest-emotion": "^10.0.32",
    "prettier": "^2.2.1",
    "react-test-renderer": "^16.14.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11"
  },
  "peerDependencies": {
    "@guardian/types": "1.x"
  },
  "scripts": {
    "preinstall": "[ -z \"$CI\" ] || if [[ $npm_execpath =~ 'yarn' ]]; then echo 'Use NPM!' && exit 1; fi",
    "build": "npm run build:tsc && npm run build:babel && npm run build:cleanup",
    "build:tsc": "tsc --outDir tmp",
    "build:babel": "babel tmp --config-file ./config/babel.config.json --out-dir dist --copy-files",
    "build:cleanup": "rm -rf tmp",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "tsc": "tsc",
    "validate": "npm run lint && npm run test && npm run tsc",
    "test:watch": "jest --watch",
    "storybook": "start-storybook -p 8181 --ci",
    "build-storybook": "node --max-old-space-size=4096 $(yarn bin)/build-storybook",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/image-rendering.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/guardian/image-rendering/issues"
  },
  "homepage": "https://github.com/guardian/image-rendering#readme",
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "transformIgnorePatterns": [
      "node_modules/(?!(@guardian/src-foundations|@guardian/types)/)"
    ],
    "snapshotSerializers": [
      "jest-emotion"
    ],
    "testPathIgnorePatterns": [
      "dist"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "10"
                }
              }
            ],
            "@emotion/babel-preset-css-prop"
          ]
        }
      }
    }
  }
}
